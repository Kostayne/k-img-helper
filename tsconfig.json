{
    "exclude": ["node_modules"],
    "include": ["src"],

    "compilerOptions": {
        "module": "ESNext",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,

        "baseUrl": "./",

        "paths": {
            "@type/*": ["src/types/*"],
            "@shared/*": ["src/shared/*"],
            "@utils/*": ["src/utils/*"],
            "@modules/*": ["src/modules/*"],
            "@commands/*": ["src/commands/*"]
        }
    },

    "ts-node": {
        "esm": true,
        "moduleTypes": {
            "jest.config.ts": "cjs"
        }
    }
}