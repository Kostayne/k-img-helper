{
    "exclude": ["node_modules"],
    "include": ["src"],

    "compilerOptions": {
        "module": "ESNext",
        "outDir": "dist",
        "sourceMap": true,
        "noImplicitAny": true,
        "moduleResolution": "NodeNext",
        "target": "ESNext",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "esModuleInterop": true,
        "allowJs": true,
    },

    "ts-node": {
        "esm": true,
        "moduleTypes": {
            "jest.config.ts": "cjs"
        }
    }
}